{{outlet}}

<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-label">חיפוש</div>
	</div>
	<div class="panel-body" style="background-color: #f4f4f4;">
		<form>

          <div class="row">

            <div class="col-md-4">
              <div class="form-group">
                <label>מספר סימפטום:</label>
                {{input  type="text" class="form-control" valueBinding="search.symptomId"}}
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label>שם סימפטום:</label>
                {{input  type="text" class="form-control" valueBinding="search.description"}}
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">
                <label>חלק בגוף:</label>
                {{view Em.Select classNames="form-control" 
                  contentBinding="App.symptomsBodyParts" 
                  optionValuePath="content.id"
                  optionLabelPath="content.name"
                  valueBinding="search.bodyPart"
                  prompt="בחר..."
                  }}
              </div>
            </div>
			
        </div>

    </form>
	</div>
</div>

{{view GRID.TableView}}